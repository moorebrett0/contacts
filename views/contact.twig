<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Home Page</title>
    </head>
    <body>
        <div class='container'>
            <div class='jumbotron'>
                <h1>Your Contact List!</h1>
            </div>


                <h1>Contacts</h1>
                <form action='/contacts' method='post'>
                    <div class='form-group'>
                        <label for='name'>Enter Contact Name</label>
                        <input id='name' name='name' class='form-control' type='text'>



                <form action='/contacts' method='post'>
                    <div class='form-group'>
                        <label for='information'>Enter Contacts Address</label>
                        <input id='information' name='information' class='form-control' type='text'>
                    </div>


                    <form action='/contacts' method='post'>
                        <div class='form-group'>
                            <label for='number'>Enter Contacts Number</label>
                            <input id='number' name='number' class='form-control' type='numbers'>
                        </div>

                    <button type='submit'>Enter Contact</button>
                </form>


            {% if contacts is not empty %}

            <h2>Your contacts</h2>
              <ul>
                {% for contact in contacts %}

                    <li>{{ contact.getName }}</li>
                    <li>{{ contact.getInformation }}</li>
                    <li>{{ contact.getNumber }}</li>


                {% endfor %}
            </ul>
            <form action='/clear_contacts' method='post'>
                <button type='submit'>Clear contacts</button>
            </form>
            {% endif %}
        </div>
    </body>
</html>
